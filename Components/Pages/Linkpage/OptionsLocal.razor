@page "/Linkpage/OptionsLocal"
<PageTitle>选项联动</PageTitle>
<Amis Data="GetObj()"></Amis>

@code {

    private object GetObj()
    {
        var data = new
        {
            type = "page",
            title = "表单选项的联动",
            body = new
            {
                type = "form",
                mode = "horizontal",
                title = "",
                actions = new object[] { },
                debug = true,
                body = new object[]
                {
                    "<p class=\"text-danger\">表单选项内也能联动，通过配置 visibleOn、hiddenOn或者disabledOn</p>",
                    new
                    {
                        type = "divider"
                    },

                    new
                    {
                        label = "选项1",
                        type = "list-select",
                        multiple = false,
                        labelClassName = "text-muted",
                        name = "a",
                        inline = true,
                        options = new object[]
                        {
                            new
                            {
                                label = "选项1",
                                value = 1
                            },

                            new
                            {
                                label = "选项2",
                                value = 2
                            },

                            new
                            {
                                label = "选项3",
                                value = 3
                            }
                        }
                    },

                    new
                    {
                        label = "选项级别联动",
                        type = "radios",
                        labelClassName = "text-muted",
                        name = "b",
                        inline = true,
                        selectFirst = true,
                        options = new object[]
                        {
                            new
                            {
                                label = "选项1",
                                value = 1,
                                disabledOn = "data.a == 1"
                            },

                            new
                            {
                                label = "选项2",
                                value = 2,
                                hiddenOn = "data.a == 2"
                            },

                            new
                            {
                                label = "选项3",
                                value = 3,
                                visibleOn = "data.a == 3"
                            }
                        }
                    },

                    new
                    {
                        label = "组件级别联动",
                        type = "radios",
                        labelClassName = "text-muted",
                        name = "b",
                        inline = true,
                        selectFirst = true,
                        visibleOn = "data.a == 1",
                        options = new object[]
                        {
                            new
                            {
                                label = "选项1",
                                value = 1
                            }
                        }
                    },

                    new
                    {
                        label = "选项级别联动",
                        type = "radios",
                        labelClassName = "text-muted",
                        name = "b",
                        inline = true,
                        selectFirst = true,
                        visibleOn = "data.a == 2",
                        options = new object[]
                        {
                            new
                            {
                                label = "选项1",
                                value = 1
                            },
                            new
                            {
                                label = "选项2",
                                value = 2
                            }
                        }
                    }
                }
            }
        };
        return data;
    }

}
