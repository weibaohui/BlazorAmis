@page "/Event/Update/Dialog"
<Amis Data="GetObj()"></Amis>

@code {

    private object GetObj()
    {
        var data = new
        {
            type = "page",
            data = new
            {
                globalData = new
                {
                    website = "http://www.baidu.com",
                    email = "amis!@baidu.com",
                    rememberMe = true
                }
            },
            body = new object[]
            {
                new
                {
                    type = "alert",
                    body = "这种场景一般用在弹窗内某个异步操作后，数据的回填。请求返回的数据可以指定存储在`outputVar`变量里，其他动作可以通过${[outputVar]}直接获取该数据。",
                    level = "info",
                    className = "mb-1"
                },
                new
                {
                    type = "button",
                    label = "打开弹窗",
                    level = "primary",
                    className = "mt-2",
                    onEvent = new
                    {
                        click = new
                        {
                            actions = new object[]
                            {
                                new
                                {
                                    actionType = "dialog",
                                    dialog = new
                                    {
                                        title = "在弹框中的表单",
                                        id = "dialog_003",
                                        data = new
                                        {
                                            username = "amis",
                                            rememberMe = "${globalData.rememberMe}"
                                        },
                                        body = new
                                        {
                                            type = "form",
                                            api = "https://3xsw4ap8wah59.cfc-execute.bj.baidubce.com/api/amis-mock/mock2/form/saveForm?waitSeconds=2",
                                            body = new object[]
                                            {
                                                new
                                                {
                                                    type = "input-text",
                                                    name = "username",
                                                    required = true,
                                                    placeholder = "请输入用户名",
                                                    label = "用户名"
                                                },
                                                new
                                                {
                                                    type = "input-password",
                                                    name = "password",
                                                    label = "密码",
                                                    required = true,
                                                    placeholder = "请输入密码"
                                                },
                                                new
                                                {
                                                    type = "checkbox",
                                                    name = "rememberMe",
                                                    label = "记住登录"
                                                }
                                            }
                                        },
                                        actions = new object[]
                                        {
                                            new
                                            {
                                                type = "button",
                                                label = "确认",
                                                className = "m",
                                                primary = true,
                                                onEvent = new
                                                {
                                                    click = new
                                                    {
                                                        actions = new object[]
                                                        {
                                                            new
                                                            {
                                                                actionType = "ajax",
                                                                args = new
                                                                {
                                                                    api = "https://3xsw4ap8wah59.cfc-execute.bj.baidubce.com/api/amis-mock/mock2/form/initData"
                                                                },
                                                                outputVar = "myResult"
                                                            },
                                                            new
                                                            {
                                                                actionType = "setValue",
                                                                componentId = "dialog_003",
                                                                args = new
                                                                {
                                                                    value = new
                                                                    {
                                                                        username = "${myResult.name}"
                                                                    }
                                                                }
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        };
        return data;
    }

}
