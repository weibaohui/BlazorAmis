@page "/Event/Update/Form"
<PageTitle>更新表单数据</PageTitle>
<Amis Data="GetObj()"></Amis>

@code {

    private object GetObj()
    {
        var data = new
        {
            type = "page",
            data = new
            {
                globalData = new
                {
                    myrole = "法官",
                    mymsg = "该吃饭了!"
                }
            },
            body = new object[]
            {
                new
                {
                    type = "alert",
                    body = "直接更新指定的表单组件的数据。",
                    level = "info",
                    className = "mb-1"
                },
                new
                {
                    type = "button",
                    label = "更新",
                    level = "primary",
                    className = "mt-2 mb-2",
                    onEvent = new
                    {
                        click = new
                        {
                            actions = new object[]
                            {
                                new
                                {
                                    actionType = "setValue",
                                    componentId = "form_data",
                                    args = new
                                    {
                                        value = "${globalData}"
                                    }
                                }
                            }
                        }
                    }
                },
                new
                {
                    type = "form",
                    id = "form_data",
                    title = "表单",
                    debug = true,
                    data = new
                    {
                        myrole = "预言家",
                        age = "18"
                    },
                    initApi = "https://3xsw4ap8wah59.cfc-execute.bj.baidubce.com/api/amis-mock/mock2/form/initData",
                    body = new object[]
                    {
                        new
                        {
                            type = "input-text",
                            label = "角色",
                            name = "myrole",
                            disabled = false,
                            mode = "horizontal"
                        },
                        new
                        {
                            type = "input-text",
                            label = "年龄",
                            name = "age",
                            disabled = false,
                            mode = "horizontal"
                        }
                    }
                }
            }
        };
        return data;
    }

}
