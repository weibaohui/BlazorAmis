            regions = new string[] { "body", "toolbar", "header" },
            body = new object[]
            {
                new
                {
                    type = "tpl",
                    tpl = "Switch组件",
                    inline = false,
                    wrapperComponent = "h2"
                },
                new
                {
                    type = "form",
