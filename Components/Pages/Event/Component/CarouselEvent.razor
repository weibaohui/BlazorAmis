@page "/Event/Component/Carousel"
<PageTitle>轮播图组件事件</PageTitle>
<Amis Data="GetObj()"></Amis>

@code {

    private object GetObj()
    {
        var data = new
        {
            type = "page",
            title = "轮播图组件事件",
            regions = new string[] { "body", "toolbar", "header" },
            data = new
            {
                index = 3
            },
            body = new object[]
            {
                new
                {
                    type = "action",
                    label = "上一张",
                    level = "primary",
                    className = "mr-3 mb-3",
                    onEvent = new
                    {
                        click = new
                        {
                            actions = new object[]
                            {
                                new
                                {
                                    actionType = "prev",
                                    componentId = "carousel_001"
                                }
                            }
                        }
                    }
                },
                new
                {
                    type = "action",
                    label = "下一张",
                    level = "primary",
                    className = "mr-3 mb-3",
                    onEvent = new
                    {
                        click = new
                        {
                            actions = new object[]
                            {
                                new
                                {
                                    actionType = "next",
                                    componentId = "carousel_001"
                                }
                            }
                        }
                    }
                },
                new
                {
                    type = "action",
                    label = "滚动到第三张",
                    level = "primary",
                    className = "mr-3 mb-3",
                    onEvent = new
                    {
                        click = new
                        {
                            actions = new object[]
                            {
                                new
                                {
                                    actionType = "goto-image",
                                    componentId = "carousel_001",
                                    args = new
                                    {
                                        activeIndex = "${index}"
                                    }
                                }
                            }
                        }
                    }
                },
                new
                {
                    type = "carousel",
                    id = "carousel_001",
                    auto = false,
                    thumbMode = "cover",
                    animation = "slide",
                    height = 300,
                    options = new object[]
                    {
                        new
                        {
                            image = "https://internal-amis-res.cdn.bcebos.com/images/2019-12/1577157239810/da6376bf988c.png"
                        },
                        new
                        {
                            html = "<div style=\"width: 100%; height: 300px; background: #e3e3e3; text-align: center; line-height: 300px;\">carousel data</div>"
                        },
                        new
                        {
                            thumbMode = "contain",
                            image = "https://suda.cdn.bcebos.com/amis/images/alice-macaw.jpg"
                        }
                    },
                    onEvent = new
                    {
                        change = new
                        {
                            actions = new object[]
                            {
                                new
                                {
                                    actionType = "toast",
                                    args = new
                                    {
                                        msg = "滚动至${activeIndex}"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        };
        return data;
    }

}
