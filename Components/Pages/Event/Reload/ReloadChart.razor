@page "/Event/Reload/Chart"
<PageTitle>刷新图表</PageTitle>
<Amis Data="GetObj()"></Amis>

@code {

    private object GetObj()
    {
        var data = new
        {
            type = "page",
            body = new object[]
            {
                new
                {
                    type = "alert",
                    body = "刷新图表，使图表重新加载",
                    level = "info",
                    className = "mb-1"
                },
                new
                {
                    type = "button",
                    label = "刷新",
                    level = "primary",
                    className = "mt-2 mb-2",
                    onEvent = new
                    {
                        click = new
                        {
                            actions = new object[]
                            {
                                new
                                {
                                    actionType = "reload",
                                    componentId = "chart_reload"
                                }
                            }
                        }
                    }
                },
                new
                {
                    type = "chart",
                    id = "chart_reload",
                    api = "/api/mock/Chart/ChartData",
                    config = new
                    {
                        xAxis = new
                        {
                            type = "category",
                            data = new string[] { "Mon", "Tue", "Wed", "Thu", "Fri", "Sat" }
                        },
                        yAxis = new
                        {
                            type = "value"
                        },
                        series = new object[]
                        {
                            new
                            {
                                data = "${line}",
                                type = "line"
                            }
                        }
                    }
                }
            }
        };
        return data;
    }

}
